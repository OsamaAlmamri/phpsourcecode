        <li class="user-footer">
            <div class="pull-left">
                <a href="{{ path('admin_app_adminuser_profile') }}" class="btn btn-default btn-flat">Profile</a>
            </div>
            <div class="pull-right">
                <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat">Sign out</a>
            </div>
        </li>
    </ul>
