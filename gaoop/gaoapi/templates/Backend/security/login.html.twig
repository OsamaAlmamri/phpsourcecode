{% extends "@!SonataAdmin/standard_layout.html.twig" %}

{% block sonata_head_title %}
    GaoAPI | Log in
{% endblock %}

{% block body_attributes %}
    class="hold-transition login-page"
{% endblock %}

{% block sonata_header %}

{% endblock %}

{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-logo">
            <img height="40" src="{{ asset('images/gaoapi-logo.svg') }}" alt="GaoAPI" style="background: #d2d6de; margin-top: -7px;">
            <a href="../../index2.html"><b>Gao</b>API</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="form-group has-feedback">
                    <input type="text" value="{{ last_username }}" name="username" placeholder="Username" id="inputUsername" class="form-control" required autofocus>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="password" id="inputPassword" placeholder="Password" class="form-control" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="row">
                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                    {# See https://symfony.com/doc/current/security/remember_me.html#}
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label style="margin-left: 0px;">
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
