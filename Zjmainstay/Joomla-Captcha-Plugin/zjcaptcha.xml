<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="captcha" method="upgrade">
	<name>Captcha - Zjcaptcha</name>
	<author>Zjmainstay</author>
	<creationDate>2014-12-24</creationDate>
	<copyright>Copyright (C) 2013 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.apache.org/licenses/ Apache License</license>
	<authorEmail>zjmainstay@163.com</authorEmail>
	<authorUrl>zjmainstay.cn</authorUrl>
	<version>1.0</version>
	<description>PLG_ZJCAPTCHA_CAPTCHA_DESC</description>
	<files>
		<filename plugin="zjcaptcha">zjcaptcha.php</filename>
		<filename>index.html</filename>
		<folder>core</folder>
		<folder>language</folder>
	</files>
	<config>
	<fields name="params">
		<fieldset name="basic">
			<field
				name="jquery"
				type="radio"
				default="1"
				label="PLG_ZJCAPTCHA_INCLUDE_JQUERY"
				description="PLG_ZJCAPTCHA_INCLUDE_JQUERY_DESC">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field
				name="inputWidth"
				type="text"
				default="60px"
				label="PLG_ZJCAPTCHA_INPUT_WIDTH"
				description="PLG_ZJCAPTCHA_INPUT_WIDTH_DESC">
			</field>
			<field
				name="imgWidth"
				type="text"
				default="50px"
				label="PLG_ZJCAPTCHA_IMG_WIDTH"
				description="PLG_ZJCAPTCHA_IMG_WIDTH_DESC">
			</field>
			<field
				name="imgHeight"
				type="text"
				default="25px"
				label="PLG_ZJCAPTCHA_IMG_HEIGHT"
				description="PLG_ZJCAPTCHA_IMG_HEIGHT_DESC">
			</field>
		</fieldset>
	</fields>
	</config>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_captcha_zjcaptcha.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_captcha_zjcaptcha.sys.ini</language>
	</languages>
</extension>