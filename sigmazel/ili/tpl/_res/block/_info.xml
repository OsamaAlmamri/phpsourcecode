<?xml version="1.0" encoding="utf-8"?>
<blocks>
    <block>
        <key>nav-multi</key>
        <name>导航</name>
        <params>
            <param id="model" type="string" value="admin\model\_nav" readonly="readonly"/>
            <param id="method" type="string" value="multi" readonly="readonly"/>
            <param id="var" type="string" value="navs" readonly="readonly"/>
            <param id="cache" type="checkbox" name="缓存？" label="是"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/nav-multi-1.jpg" file="/tpl/_res/block/file/nav-multi-1"/>
        </themes>
    </block>
    <block>
        <key>nav-crumbs</key>
        <name>导航面包屑</name>
        <params>
            <param id="model" type="string" value="admin\model\_nav" readonly="readonly"/>
            <param id="method" type="string" value="crumbs" readonly="readonly"/>
            <param id="var" type="string" value="crumbs" readonly="readonly"/>
            <param id="param" type="string" name="参数名" placeholder="输入参数名" tips="传递变量的参数名称"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/nav-crumbs-1.jpg" file="/tpl/_res/block/file/nav-crumbs-1"/>
            <theme id="theme2" name="样式2" file="tpl/_res/block/file/nav-crumbs-2.htm"/>
        </themes>
    </block>
    <block>
        <key>category-multi</key>
        <name>分类多条</name>
        <params>
            <param id="model" type="string" value="cms\model\_category" readonly="readonly"/>
            <param id="method" type="string" value="multi" readonly="readonly"/>
            <param id="var" type="string" value="categories" readonly="readonly"/>
            <param id="identity" type="string" name="标识号" placeholder="输入分类标识号" tips="空列根目录，支持变量，如$category[IDENTITY]"/>
            <param id="link" type="page" name="链接到"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/category-multi-1.jpg" file="/tpl/_res/block/file/category-multi-1"/>
        </themes>
    </block>
    <block>
        <key>category-crumbs</key>
        <name>分类面包屑</name>
        <params>
            <param id="model" type="string" value="cms\model\_category" readonly="readonly"/>
            <param id="method" type="string" value="crumbs" readonly="readonly"/>
            <param id="var" type="string" value="crumbs" readonly="readonly"/>
            <param id="identity" type="string" name="标识号" placeholder="输入分类标识号" tips="空列根目录，支持变量，如$category"/>
            <param id="link" type="page" name="链接到"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/category-crumbs-1.jpg" file="/tpl/_res/block/file/category-crumbs-1"/>
            <theme id="theme2" name="样式2" file="tpl/_res/block/file/category-crumbs-2.htm"/>
        </themes>
    </block>
    <block>
        <key>category-one</key>
        <name>分类单条</name>
        <params>
            <param id="model" type="string" value="cms\model\_category" readonly="readonly"/>
            <param id="method" type="string" value="one" readonly="readonly"/>
            <param id="var" type="string" value="category" readonly="readonly"/>
            <param id="param" type="string" name="参数名" placeholder="输入参数名" tips="传递变量的参数名称"/>
            <param id="type" type="string" name="参数类型" placeholder="输入参数类型" tips="支持id和identity，空时参数名为标识号"/>
            <param id="link" type="page" name="链接到"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/category-one-1.jpg" file="/tpl/_res/block/file/category-one-1"/>
        </themes>
    </block>
    <block>
        <key>article-multi</key>
        <name>文章多条</name>
        <params>
            <param id="model" type="string" value="cms\model\_article" readonly="readonly"/>
            <param id="method" type="string" value="multi" readonly="readonly"/>
            <param id="var" type="string" value="articles" readonly="readonly"/>
            <param id="identity" type="string" name="标识号" placeholder="输入分类标识号" tips="支持变量，如$category[IDENTITY]"/>
            <param id="param" type="string" name="参数名" placeholder="输入参数名" tips="传递分类变量的参数名称，可空"/>
            <param id="limit" type="number" name="数量" placeholder="输入文章数量" tips="显示的文章条数"/>
            <param id="pager" type="checkbox" name="分页？" label="是"/>
            <param id="link" type="page" name="链接到"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/article-multi-1.jpg" file="/tpl/_res/block/file/article-multi-1"/>
            <theme id="theme2" name="样式2" thumb="tpl/_res/block/images/article-multi-2.jpg" file="/tpl/_res/block/file/article-multi-2"/>
            <theme id="theme3" name="样式3" thumb="tpl/_res/block/images/article-multi-3.jpg" file="/tpl/_res/block/file/article-multi-3"/>
        </themes>
    </block>
    <block>
        <key>article-search</key>
        <name>文章搜索</name>
        <params>
            <param id="model" type="string" value="cms\model\_article" readonly="readonly"/>
            <param id="method" type="string" value="search" readonly="readonly"/>
            <param id="var" type="string" value="articles" readonly="readonly"/>
            <param id="param" type="string" name="参数名" placeholder="输入参数名" tips="传递分类变量的参数名称，可空"/>
            <param id="limit" type="number" name="数量" placeholder="输入文章数量" tips="显示的文章条数"/>
            <param id="pager" type="checkbox" name="分页？" label="是"/>
            <param id="link" type="page" name="链接到"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/article-search-1.jpg" file="/tpl/_res/block/file/article-search-1"/>
        </themes>
    </block>
    <block>
        <key>article-one</key>
        <name>文章单条</name>
        <params>
            <param id="model" type="string" value="cms\model\_article" readonly="readonly"/>
            <param id="method" type="string" value="one" readonly="readonly"/>
            <param id="var" type="string" value="article" readonly="readonly"/>
            <param id="param" type="string" name="参数名" placeholder="输入参数名" tips="传递变量的参数名称"/>
            <param id="other" type="checkbox" name="上下篇？" label="是"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/article-one-1.jpg" file="/tpl/_res/block/file/article-one-1"/>
        </themes>
    </block>
    <block>
        <key>ad</key>
        <name>广告位</name>
        <params>
            <param id="model" type="string" value="ad\model\_ad" readonly="readonly"/>
            <param id="method" type="string" value="display" readonly="readonly"/>
            <param id="var" type="string" value="ad_logs" readonly="readonly"/>
            <param id="identity" type="string" name="标识号" placeholder="输入标识号" tips="广告位的标识号"/>
        </params>
        <themes>
            <theme id="theme1" name="样式1" thumb="tpl/_res/block/images/adlog-display-1.jpg" file="/tpl/_res/block/file/adlog-display-1"/>
        </themes>
    </block>
</blocks>