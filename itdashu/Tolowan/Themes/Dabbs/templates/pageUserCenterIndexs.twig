{% extends "Themes/Dabbs/templates/page.twig" %}
{% block body_class %}single page-user single-post postid-129 single-format-standard nav_fixed p_indent comment-open site-layout-2{% endblock %}
{% block body %}
    <div class="content">
        <h1>{{ title }}</h1>
        <hr/>
        {{ view.r(dataForm) }}
    </div>
{% endblock %}
{% block right_box %}
    <aside class="sidebar">
        <div id="user-center-left" class="crop-avatar">
            <!-- table of contents -->
            <div class="box">
                <div class="user-info-face clear avatar-view">
                    <img id="face" src="{% if userInfo.face %}{{ userInfo.face }}{% else %}/images/face/avatar.png{% endif %}"/>
                    <div class="user-meta">
                        <p class="user-name">{{ userInfo.name }}<b>LV 8</b></p>
                        <p class="edit"><a href="javascript:;">修改头像</a></p>
                        <p class="score"><span><i aria-hidden="true" class="fa fa-ils"></i>100</span><span><i
                                        aria-hidden="true" class="fa fa-btc"></i>23433</span></p>
                    </div>
                </div>
                <p class="description">基本资料设置基本资料设置基本资料设置基本资料设置基本资料设置</p>
            </div>
            <h3>基本资料设置</h3>
            <ul id="user-action-list" class="box">
                <li><a href="#"><i aria-hidden="true" class="fa fa-lock"></i>修改密码</a></li>
                <li><a href="#"><i aria-hidden="true" class="fa fa-phone"></i>手机:18520228837<span
                                class="btn-small btn-error">未认证</span></a></li>
                <li><a href="#"><i aria-hidden="true" class="fa fa-envelope-square"></i>邮箱:admin@admin.com<span
                                class="btn-small btn-success">未认证</span></a></li>
                <li><a href="#"><i aria-hidden="true" class="fa fa-question-circle-o"></i>帮助中心</a></li>
                <li><a href="#"><i aria-hidden="true" class="fa fa-wpforms"></i>登陆历史</a></li>
            </ul>
            {% include 'Themes/Tolowan/templates/crop-avatar-user-face.twig' %}
        </div>
    </aside>
{% endblock %}
{% block bottom %}
    <script src="//cdn.bootcss.com/cropper/2.3.2/cropper.min.js"></script>
    <link href="//cdn.bootcss.com/cropper/2.3.2/cropper.min.css" rel="stylesheet">
    <link href="/themes/dacms/css/crop-avatar-main.css" rel="stylesheet">
    <script src="/themes/dacms/js/crop-avatar-main.js"></script>
{% endblock %}
