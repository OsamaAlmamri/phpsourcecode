<header id="secondary" class="s-sidebar-wrapper">
    <div class="site-branding">
        <a href="/" class="header-logo">
            <img src="/logo.gif" />
            <h1>{{ coreConfig.name }}</h1>
            <i>www.itdashu.com</i>
        </a>
    </div>
    <nav id="primary-nav" class="main-navigation" role="navigation">
        {{ view.r(menuRender('main')) }}
    </nav>
    <div class="user-box">
        {% if user.isLogin() %}
            {{ user.name }}你好，<a href="#">管理中心</a>，<a href="{{ url(['for':'logout']) }}">登出</a>
        {% else %}
        <a href="{{ url(['for':'login']) }}">登陆</a>
        <a href="{{ url(['for':'register']) }}">注册</a>
        {% endif %}
    </div>
</header>