<table class="table table-striped table-bordered table-hover" id="sample-table-1">
	{% if theadDisplay is defined AND theadDisplay == true %}
	<thead>
		<tr>
			{% for tKey,tValue in thead %}
			<th id="th-{{ tKey }}" class="th-{{ tKey }}">{{ tValue }}</th>
			{% endfor %}
		</tr>
	</thead>
	{% endif %}
	<tbody>
		{% for dKey,dValue in data %}
		<tr class="tr-{{ dKey }}">
			{% for tKey,tValue in thead %}
			<td class="td-{{ tKey }}" id="td-{{ dKey }}">{{ view.r(dValue[tKey]) }}</td>
			{% endfor %}
		</tr>
		{% else %}
		没有任何数据
		{% endfor %}
	</tbody>
</table>
