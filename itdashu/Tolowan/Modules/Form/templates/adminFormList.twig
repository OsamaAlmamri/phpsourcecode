<table class="table table-striped table-bordered table-hover" id="sample-table-1">
    <thead>
    <tr>
        <th id="th-id">ID</th>
        <th id="th-title">表单名</th>
        <th id="th-handle">操作</th>
    </tr>
    </thead>
    <tbody>
    {% for key,item in data %}
        <tr class="tr-{{ key }}">
            <td>{{ key }}</td>
            <td>{{ item['title'] }}</td>
            <td class="center">
                <a href="{{ url(['for':'adminFormEdit','id':key]) }}" class="btn btn-xs btn-info" data-target="#main">编辑</a>
                <a href="{{ url(['for':'adminFormDelete','id':key]) }}" class="btn btn-xs btn-danger" data-target="#main">删除</a>
            <a href="{{ url(['for':'adminFormFieldSort','id':key]) }}" class="btn btn-xs btn-info" data-target="#right_handle">排序字段</a>
            <a href="{{ url(['for':'adminFormFieldAdd','id':key]) }}" class="btn btn-xs btn-danger" data-target="#right_handle">添加字段</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">没有数据</td>
        </tr>
    {% endfor %}
    </tbody>
</table>