<table class="table table-striped table-bordered table-hover"
	id="sample-table-1">
	<thead>
		<tr>
			{% for value in thead %}
			<th>{{ value }}</th> {% endfor %}
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		{% for key,value in data %}
		<tr>
			{% for theadKey,theadValue in thead %}
			<td>{{ getVar(value,theadKey) }}</td> {% endfor %}
			<td>
                    {% for key,link in value.links() %}
                        <a href="{{ url(link['href']) }}" class="btn btn-xs btn-{% if link['icon'] is defined %}{{ link['icon'] }}{% else %}default{% endif %}"
                           data-target="#{% if link['data-target'] is defined %}{{ link['data-target'] }}{% else %}main{% endif %}">{{ link['name'] }}</a>
                    {% endfor %}
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
