<div class="col-xs-12 dataTables_wrapper">
    <form id="nodeAction" class="form-horizontal ajax-submit" data-target="#main-content" role="form" accept-charset="utf-8"
          method="post" action="{{ url(['for':'adminUserHandle']) }}?re_url={{ url }}">
        <table class="table table-striped table-bordered table-hover"
               id="sample-table-1">

            <thead>
            <tr>
                <th class="center"><label> <input type="checkbox" class="checkAll"
                                                  name="checkAll"> <span class="lbl"></span>
                    </label></th>
                <th id="th-id">ID</th>
                <th id="th-name">用户名</th>
                <th id="th-created">注册时间</th>
                <th id="th-handle">操作</th>
            </tr>
            </thead>

            <tbody>
            {% for item in data.items %}
                <tr class="tr-{{ item.id }}">
                    <td class="center"><label> <input type="checkbox" class="checkAll"
                                                      name="checkAll[{{ item.id }}]"> <span class="lbl"></span>
                        </label></td>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ date('Y-m-d',item.created) }}</td>
                    <td><a href="{{ url(['for':'adminUserEditor','id':item.id]) }}"
                           class="btn btn-xs btn-info" data-target="#right_handle">编辑</a>
                        <a href="{{ url(['for':'adminUserDelete','id':item.id]) }}"
                           class="btn btn-xs btn-danger" data-target="#main">删除</a>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <p>
            <span>选中文章：</span>
            <select name="action">
                <option value="delete">删除用户</option>
                <option value="disable">禁用用户</option>
                <option value="activation">激活用户</option>
            </select>
            <button type="submit" class="btn btn-xs btn-success">提交</button>
        </p>
    </form>
    {{ partial("Themes/AdminLTE/templates/paginator") }}
</div>