<table class="table table-striped table-bordered table-hover" id="sample-table-1">
	<thead>
		<tr>
			<th>ID</th>
			<th>名称</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
	    {% for key,value in data %}
		<tr>
			<td>{{ value['machine'] }}</td>
			<td>{{ value['name'] }}</td>
			<td>
			    <a data-target="#right_handle" href="{{ url(['for':'adminConfigListEditor','id':id,'line':key]) }}" class="btn btn-xs btn-info">编辑</a>
                <a data-target="#right_handle" href="{{ url(['for':'adminConfigListDelete','id':id,'line':key]) }}" class="btn btn-xs btn-danger">删除</a>
				<a data-target="#right_handle" href="{{ url(['for':'adminMenuLinkList','id':key]) }}" class="btn btn-xs btn-danger">排序链接</a>
				<a data-target="#right_handle" href="{{ url(['for':'adminMenuLinkAdd','id':key]) }}" class="btn btn-xs btn-danger">添加链接</a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>