<div class="col-xs-12 dataTables_wrapper">
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
        <thead>
        <tr>
            <th class="center">
                <input type="checkbox" class="checkAll" name="checkAll"> <span class="lbl"></span>
            </th>
            <th>机读名</th>
            <th>类型名</th>
            <th>描述</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for key,item in data %}
            <tr class="tr-{{ item.id }}">
                <td class="center">
                    <input type="checkbox" class="checkAll" name="checkAll[{{ item.node_id }}]"> <span
                            class="lbl"></span>
                </td>
                <td>{{ key }}</td>
                <td>{{ item['name'] }}</td>
                <td>{{ item['description'] }}</td>
                <td class="center">
                    <a href="#" class="btn btn-xs btn-default" data-target="#main">删除</a>
                    <a href="#" class="btn btn-xs btn-default" data-target="#main">编辑</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">没有数据</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="space-4"></div>

</div>
