<div class="row">
	<div class="col-xs-12">
		<div class="row-fluid">
			<div class="alert alert-block alert-info">
				<i class="fa fa-fw fa-file-image-o"></i>
				点击图片，添加选中列表
			</div>
			{{ content() }}
			<ul class="list boxs-list">
				{% for item in data.items %}
					<li class="{{ item.content_type }}">
						<img class="images-box-item" src="{{ filePath(item) }}">
					</li>
				{% else %}
					<li>图库为空</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		{{ partial("Modules/File/templates/paginator") }}
	</div>
</div>
<style type="text/css">
	.list li{
        list-style: none;
        display: inline-block;
    }
	.list li img {
		box-shadow: 1px 1px 4px rgba(71, 73, 72, 0.9);
		height: 100px;
		margin: 8px 6px;
		width: auto;
	}
</style>