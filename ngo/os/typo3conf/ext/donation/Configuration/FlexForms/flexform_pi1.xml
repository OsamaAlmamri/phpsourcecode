<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">付款按钮</numIndex>
										<numIndex index="1">Pay-&gt;new;Pay-&gt;create;Pay-&gt;success</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">收款管理</numIndex>
										<numIndex index="1">Pay-&gt;list;Pay-&gt;show;Pay-&gt;delete;Pay-&gt;multidelete</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">收款查询</numIndex>
										<numIndex index="1">Pay-&gt;search</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">证书查询</numIndex>
										<numIndex index="1">Pay-&gt;certificate</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.enableImport>
                        <TCEforms>
                            <label>允许数据导入</label>
                            <displayCond>FIELD:switchableControllerActions:=:Pay->list;Pay->show;Pay->delete;Pay->multidelete</displayCond>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.enableImport>
                    <settings.module>
                        <TCEforms>
                            <label>所属模块(必填)</label>
                            <displayCond>FIELD:switchableControllerActions:=:Pay->new;Pay->create;Pay->success</displayCond>
                            <config>
                                <type>input</type>
                                <size>15</size>
                                <eval>required, trim</eval>
                            </config>
                        </TCEforms>
                    </settings.module>
                    <settings.parameter>
                        <TCEforms>
                            <label>模块数据参数key</label>
                            <displayCond>FIELD:switchableControllerActions:=:Pay->new;Pay->create;Pay->success</displayCond>
                            <config>
                                <type>input</type>
                                <size>15</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.parameter>
                    <settings.money>
                        <TCEforms>
                            <label>默认打赏金额</label>
                            <displayCond>FIELD:switchableControllerActions:=:Pay->new;Pay->create;Pay->success</displayCond>
                            <config>
                                <type>input</type>
                                <size>15</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.money>
                    <settings.buttontext>
                        <TCEforms>
                            <label>按钮文字</label>
                            <displayCond>FIELD:switchableControllerActions:=:Pay->new;Pay->create;Pay->success</displayCond>
                            <config>
                                <type>input</type>
                                <size>15</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.buttontext>
                    <persistence.storagePid>
                        <TCEforms>
                            <label>数据存储</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>0</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </persistence.storagePid>
				</el>
			</ROOT>
		</sDEF>
		<email>
            <ROOT>
                <TCEforms>
                    <sheetTitle>邮件模板</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.mailsubject>
                        <TCEforms>
                            <label>标题</label>
                            <config>
                                <type>input</type>
                                <size>40</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.mailsubject>
                    <settings.mailbody>
                        <TCEforms>
                            <label>内容</label>
                            <config>
                                <type>text</type>
                                <rows>15</rows>
                                <cols>40</cols>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.mailbody>
                </el>
            </ROOT>
        </email>
	</sheets>
</T3DataStructure>