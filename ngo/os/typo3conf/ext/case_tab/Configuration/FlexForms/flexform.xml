<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>基础配置</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>显示内容</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">后台案例类型管理</numIndex>
                                        <numIndex index="1">Casetype->list;Casetype->show;Casetype->new;Casetype->create;Casetype->edit;Casetype->update;Casetype->delete</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">后台案例内容管理</numIndex>
                                        <numIndex index="1">Casetab->list;Casetab->show;Casetab->new;Casetab->create;Casetab->edit;Casetab->update;Casetab->delete;Casetab->nyajax</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">前台首页列表</numIndex>
                                        <numIndex index="1">Casetab->sylist</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">前台内页列表</numIndex>
                                        <numIndex index="1">Casetab->nylist;Casetab->nyajax</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">详情页</numIndex>
                                        <numIndex index="1">Casetab->show;Casetab->nylist;Casetab->nyajax</numIndex>
                                    </numIndex>
                                </items>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                    <settings.limit>
		                <TCEforms>
		                    <label>首页显示条数</label>
		                    <displayCond>FIELD:switchableControllerActions:=:Casetab->sylist</displayCond>
		                    <config>
		                        <type>input</type>
		                        <size>1</size>
		                    </config>
		                </TCEforms>
		            </settings.limit>
		            <settings.previewPid>
					<TCEforms>
						<label>详情面(或返回列表页)</label>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
							<wizards>
								<suggest>
									<type>suggest</type>
									<default>
										<searchWholePhrase>1</searchWholePhrase>
									</default>
								</suggest>
							</wizards>
						</config>
					</TCEforms>
				</settings.previewPid>
                <settings.detailPid>
                        <TCEforms>
                            <label>相关案例详情</label>
                            <displayCond>FIELD:switchableControllerActions:IN:Casetab->show;Casetab->nylist;Casetab->nyajax</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                        <default>
                                            <searchWholePhrase>1</searchWholePhrase>
                                        </default>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.detailPid>
                    <persistence.storagePid>
                        <TCEforms>
                            <label>选择数据存储的位置（可用）</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>0</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </persistence.storagePid>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>