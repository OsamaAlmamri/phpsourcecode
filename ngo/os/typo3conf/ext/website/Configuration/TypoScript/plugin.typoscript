#news config
plugin.tx_news {
        view {
                templateRootPaths >
                templateRootPaths {
                        0 = EXT:news/Resources/Private/Templates/
                        1 = typo3conf/ext/website/Resources/Plugin/news/Templates/
                }
                partialRootPaths >
                partialRootPaths {
                        0 = EXT:news/Resources/Private/Partials/
                        1 = typo3conf/ext/website/Resources/Plugin/news/Partials/
                }
                layoutRootPaths >
                layoutRootPaths {
                        0 = EXT:news/Resources/Private/Layouts/
                        1 = typo3conf/ext/website/Resources/Plugin/news/Layouts/
                }
                widget.GeorgRinger\News\ViewHelpers\Widget\PaginateViewHelper.templateRootPath = typo3conf/ext/website/Resources/Plugin/news/Templates/
        }
		settings {
			link {
		    	skipControllerAndAction = 1
		  	}
		  	list {
		    	paginate.insertAbove = 0
		  	}
		}
}


#indexsearch
plugin.tx_indexedsearch {
 	settings {
 		rootPidList=1
 	}
    view {
        templateRootPaths {
        	0 = EXT:indexed_search/Resources/Private/Templates/
            1 = typo3conf/ext/website/Resources/Plugin/indexed_search/Templates/
        }
        partialRootPaths {
        	0 = EXT:indexed_search/Resources/Private/Partials/
            1 = typo3conf/ext/website/Resources/Plugin/indexed_search/Partials/
        }
        layoutRootPaths {
        	0 = EXT:indexed_search/Resources/Private/Layouts/
            1 = typo3conf/ext/website/Resources/Plugin/indexed_search/Layouts/
        }
    }
}

# Default Language
plugin.tx_indexedsearch.settings.defaultOptions.languageUid = 0

# chease CH
[siteLanguage("locale") == "ch_CN.UTF-8"]
    plugin.tx_indexedsearch.settings.defaultOptions.languageUid = 0

# English US
[siteLanguage("locale") == "en_US.UTF-8"]
    plugin.tx_indexedsearch.settings.defaultOptions.languageUid = 1

[END]

#gallery
plugin.tx_fsmediagallery {
	view {
		templateRootPaths {
		    100 = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Templates/
		    110 = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Themes/Bootstrap3/Templates/
		}
		partialRootPaths {
		    100 = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Partials/
		    110 = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Themes/Bootstrap3/Partials/
		}
		layoutRootPaths {
		    100 = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Layouts/
		    110 = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Themes/Bootstrap3/Layouts/
		}
	  	widget {
	    	MiniFranske\FsMediaGallery\ViewHelpers\Widget\PaginateViewHelper {
	      		templateRootPath = typo3conf/ext/website/Resources/Plugin/fs_media_gallery/Themes/Bootstrap3/Templates/
	    	}
	  	}
	}
	
	settings{
		list {
	    	thumb {
		      	width = 
		      	height = 
		      	resizeMode = c
	    	}
	  	}
	  	album{
	    	lightbox.enable = 0
	  	}
	}
	
	list {
		pagination {
	    	itemsPerPage = 12
	  	}
	}
}
