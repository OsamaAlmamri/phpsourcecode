.topbg{position: relative;width:100%;height:300rpx;overflow: hidden;}
.topbg:after{width: 150%;height:300rpx; position: absolute; left: -20%; top: 0; z-index: -1; content: ''; border-radius: 0 0 50% 50%; background:#333}
.body{position: relative;top:-280rpx;left:0px;right: 0px;padding:10px;box-sizing: border-box;}
/*会员卡*/
.card_id{z-index:1;}
.card_id .card-tr{font-size:12px;text-align: right;color: #333;line-height: 15px;}
.cardtip{background: #363533;position: relative;margin-top:-20rpx;z-index:0;border-radius:0px 0px 10px 10px;display:-webkit-box;display:-webkit-flex;display:-ms-flexbox;display:flex;font-size: 26rpx;box-sizing:border-box;line-height:30rpx;padding:30rpx 10px 5px 10px;color: #FFF;}
.cardtip .text{-webkit-box-flex:1;-webkit-flex:1;-ms-flex:1;flex:1;}
/* 盒子 */
.box{background: #FFF;margin:10px 0px;border-radius:10px;padding: 10px;}
.box .openSetting{padding: 0px;background: none;text-align: left;border-radius: 0px}
.box button.openSetting::after{border:none;background: none;}
.box .van-cell-group{margin-bottom:20rpx;}
.box .button{margin:40px}
/* 我的钱包 */
.bill{margin-top:10px;}
.monay{text-align: center;line-height:30px;padding:10px 5px;}
.monay .sub_monay{font-size:34rpx;}
.monay .sub_monay text{font-size:24rpx;color: #888}
.monay .sub_title{font-size: 26rpx;color: #888}