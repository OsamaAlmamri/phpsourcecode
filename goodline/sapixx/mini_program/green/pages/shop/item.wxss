.swiper-box{height:250px;position: relative;padding: 0px 5px;background: #FFF;}
.swiper-box image{border-radius: 5px;}
.shop_text{padding: 10px;background: #FFF;}
.shop_text .van-cell{--cell-vertical-padding:4px;--cell-horizontal-padding:0px;}
.shop_text .special_name{font-weight:400;--cell-font-size:16px;margin-bottom:10px;}
.shop_text .special_price .sell{color:#07c160 ;font-size:20px;font-weight:500}
.shop_text .special_price .sell::before{content: '积分：';position: relative;width: 0;height: 0;font-size:12px;color:#666;font-weight:400;}
/* 内容 */
.store_card{margin-top: 10px;background: #FFF;padding: 10px;}
.store_card .item_title{width: 110px;margin: auto;text-align:center;font-size: 32rpx;font-weight:500;margin-bottom: 10px;}
.store_card .item_title::after{content: '';position: relative;width: 0;height: 0;left:5px;top:-12px;border-left:10px solid transparent;border-bottom:10px solid #07c160;}
.store_card .panel-body{font-size:32rpx;line-height:50rpx;color: #666}
.store_card .panel-body .img{max-width:100%!important}
/* 锁屏 */
.weui-footer{margin-bottom:60px}