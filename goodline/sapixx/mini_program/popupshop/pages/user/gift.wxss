/* 公共组件 */
.tab{position:fixed;z-index: 100;left: 0px;right: 0px;height:4px;line-height:40px;background: #ffffff;display: inline-table;font-size:30rpx;width: 100%;}
.tab .tabs{display:table-cell;border-bottom:1px #eee solid;text-align: center;padding: 0px 10rpx;}
.tab .action{border-bottom:3px #1aad19 solid;color:#1aad19}
/* 产品预览 */
.order_list{position:absolute; top:40px; left:0; right:0; bottom:0;}
.order_item{margin:5px;}
.van-card {padding:5px!important;}
.van-card .van-card__title {font-weight:400!important;font-size:28rpx!important;}
.van-card .van-card__desc{font-size: 12px;}
.van-panel .van-cell__value{color: #ee0a24!important;}
.van-panel__footer {padding: 10px 0px!important;}
.button {height: 30px;}
.button van-button{margin-right:5px}