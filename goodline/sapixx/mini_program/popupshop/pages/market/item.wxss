@import "/wxParse/wxParse.wxss";
.swiper-box{height:750rpx;}
.slide-image {width: 100%;height: 100%;margin: 0 auto;display: block;}
.weui-panel{margin-top: 0px;}
.weui-media-box__title{white-space:normal;}
.weui-media-box__info {line-height:1.5em;}
.weui-media-box{padding:10px}
.article-title{padding:10px;font-size: 14px;color:#999;}
.weui-article{margin-bottom:55px;padding:5px;background: #FFF}
.weui-article image{width: 100%}
/*底部按钮*/
.goods-fixed-icon {width:140rpx;background: #fff;margin:auto;line-height:15px;border-right: 1rpx solid #eee;position: relative;text-align: center;}
.goods-fixed-icon  .fixed-icon{font-size:40rpx;}
/* 套餐 */
.card{background: #FFF;border-radius:13.248px;box-sizing: border-box;padding:5px;position:relative}
.card .item-title{height: 35px;line-height: 35px;text-overflow: ellipsis;overflow: hidden;color: #7d7e80;font-weight: 600;position: relative;padding: 0px 5px}
.card .item-price{color:#f23030;padding-left: 10px;position:absolute;top:0px;right:10px;}
.card .item-price .number{font-size:50rpx;}
.card .item-img{display: -webkit-box;display: -webkit-flex;display: flex;}
.card .item-img .item-grid{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;width: 33.33333333%;box-sizing: border-box;padding-left:5px;text-align: center}
.card .item-img .item-grid:first-child{padding-left:0px;}
.card .item-img .item-grid .item-name{text-overflow: ellipsis;overflow: hidden;font-size: 26rpx;line-height: 35rpx;max-height:70rpx;margin-top: 5px}
.card .item-img .item-grid image{width: 100%;vertical-align:middle;border-radius:9.936px;}
.card .item-img .item-grid .price{font-size:12px;color:#999;margin-top: 5px}
.card .item-img .item-grid .number{font-size:28rpx;text-decoration:line-through;}
.card .item-info {height:30px;line-height:30px;margin:10rpx}
.card .item-info .face{width:30px;height:30px;float: left;}
.card .item-info .face image{width:30px;height:30px;border-radius:15px;}
.card .item-info .nickname{font-size:28rpx;float: left;padding-left:5px;color: #888}