			$(function(){
		
     var readCart = function () {
        var ckcart = $.cookie('cart') || '';
        $('.bgstyle').each(function (e) {
            var id = $(this).children('input').attr('value');
            var p = ckcart.indexOf(id + '-');
            if (p == -1)
                return;
            p = ckcart.indexOf('-', p) + 1;
            var ed = ckcart.indexOf(',', p);
            $(this).find('.caraddg > input').attr('value',ckcart.substr(p, ed - p));
        });
    };

    var listener = function () {
        $('.caraddg > button').click(function (e) {
            var pel = $(e.target.parentNode);
            var id = parseInt(pel.parents('.bgstyle').children('.spid').attr('value'));
            var num = parseInt(pel.children('input').attr('value'));

            if ($(e.target).html().indexOf('+') != -1)
                num++;
            else if (num > 0)
                num--;
            pel.children('input').attr('value',num);

            //写入cookie，数据结构是 id-num,id-num,id-num,如
            //14-5,1-4,6-2 Id 14 1 6的菜品分别点了5 4 2份
            var ckcart = $.cookie('cart') || '';
            var p = ckcart.indexOf(id + '-');
            if (p != -1) {
                var ed = ckcart.indexOf(',', p);
                var oldVal = ckcart.substr(p, ed - p + 1);
                ckcart = ckcart.replace(oldVal, num == 0 ? '' : id + '-' + num + ',');

            }
            else{
                ckcart += id + '-' + num + ',';
            }

            $.cookie('cart', ckcart, {expires:7,path:'/'});
            refreshTotal();//刷新总数
	    refreshSumMoney();//刷新金额
	
        });

    };
	
	var refreshTotal = function () {
        var ckcart = $.cookie('cart') || '';
        var total=0;
        $.each(ckcart.split(',') , function (i , v) {
	        var p = v.indexOf('-') + 1;
	        if (p != 0)
		        total += parseInt(v.substr(p));
        });
		 
        //#carttotal对应的是显示总数的标签的Id,移植时改动下面这个Id即可
        $('.allsl').html(total);
        $('.count').html(total);
	};
	
    var refreshSumMoney = function () {
           var money = 0,sumjf = 0;
           $('.bgstyle').each(function () {

               var price = parseFloat($(this).find('.fdj').attr('value'));
               var djf = parseFloat($(this).find('.fjf').attr('value'));
               var num = parseFloat($(this).find('.caraddg > input').attr('value'));

               if (!isNaN(price) && !isNaN(num))
                   money += price * num;
 	       if (!isNaN(djf) && !isNaN(num))
               	   sumjf+= djf * num;
           });
		  
           //$('.allzj').html(money.toFixed(2));
	   $('.alljf').html(round2(sumjf,0));
	   
	        var MoToFixed =  money;//所有订单总金额
			var CarMoney = $('.carmoneygt').text();//设定的金额
			var CarTotal = $('.cartotal').text(); //总金额
			var PackingFee = $('.packingfee').text(); //配送费
			var CarOnSale = $('.caronsale').text(); //打折
			  var CarOnSaleCar = CarOnSale / 100;
			if( CarOnSale.length <2 ){
				 var CarOnSaleCar = CarOnSale / 10; //打折
		  //alert( "1")
		   }
		 
			if(! $('.caronsale').length>0 ){
				
				var CarOnSaleCar = 1 ; //打折
				  
				}	
					//alert(CarOnSale);
					function round2(number,fractionDigits){  
					with(Math){  
						return round(number*pow(10,fractionDigits))/pow(10,fractionDigits);  
					}  
				} 
				
				 //var CarAllCashffff = 9; 
				 
				 
					//var AllPacking = $('.allpacking').text();
					//alert(AllPacking);
					if( $('.allpacking').text() == '所有订单本店收取配送费' ){
					  var CarMoTo =   Number(MoToFixed) + Number(PackingFee);
						
						var CarAllCash = CarMoTo * CarOnSaleCar;
						$('.cartotal').html(round2(CarAllCash,2));
						$('.carfee').html("配送费 <font style='color:red;font-weight:bold;'>" + PackingFee + " </font>元 + 订单 <font style='color:red;font-weight:bold;'>" + MoToFixed + " </font> 元 <font class='CarOnemtpy'>   " + CarOnSale +"折</font> = ");
					}else if(   MoToFixed < CarMoney  ){
						
						var CarMoTo =   Number(MoToFixed) + Number(PackingFee) ;
						var CarAllCash = CarMoTo * CarOnSaleCar;
						$('.cartotal').html(round2(CarAllCash,2));
						$('.carfee').html("配送费 <font style='color:red;font-weight:bold;'>" + PackingFee + " </font>元 + 订单 <font style='color:red;font-weight:bold;'>" + round2(MoToFixed,2) + " </font> 元<font class='CarOnemtpy'>  " + CarOnSale +"折</font> = ");
						$('.highlow').html('低');
						$('.needpack').html('需要');
						
					}else{
					 
					 var CarMoTo =  Number(MoToFixed)* Number(CarOnSaleCar);
					
					 $('.cartotal').html(round2(CarMoTo,2));
					 $('.carfee').html("免配送费 + 订单 <font style='color:red;font-weight:bold;'> " + round2(MoToFixed,2) + " </font> 元  <font class='CarOnemtpy'> * " + CarOnSale +"折</font> = ");
						$('.highlow').html('高');
						$('.needpack').html('免');
					
					}
						if(! $('.caronsale') .length>0){
							//不打折时去掉【折】字
							$('.CarOnemtpy').empty();
				  
						}  
    };
   
    $(document).ready(function () {
        readCart();
        listener();
	refreshTotal();
        refreshSumMoney();
    });

			});
		 
